<script src="~/Scripts/jquery-1.8.2.min.js"></script>
<script src="~/Scripts/jquery.signalR-2.2.0.min.js"></script>
<script src="http://localhost:55555/signalr/hubs"></script>

<script type="text/javascript">
    
    $(function () {       
        $.connection.hub.url = "http://localhost:55555/signalr";
        var chat = $.connection.SnakeHub;
        $.connection.hub.qs = { 'Name' : 'web' };
        if (chat != undefined) {
            chat.client.NewMessage = function (mess) {
                alert(mess);
            }
            $.connection.hub.start().done(function () {
                //alert("hub start");
                chat.server.sendMessage("222");
            })
            .fail(function () {
                alert("error");
            });
        }
        $.connection.hub.disconnected(function () {            
            alert("Disconnected");
        });

        $.connection.hub.reconnecting(function () {           
            alert("Reconnecting");
        });

        $.connection.hub.reconnected(function () {          
            alert("Reconnected");
        });
    })

</script>
